# MongoDB Atlas Configuration for FocusBook
# Copy this file to .env and update the values according to your MongoDB Atlas setup

# MongoDB Atlas connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/focusbook?retryWrites=true&w=majority
DB_NAME=focusbook

# Optional: Connection pool settings (uses defaults if not specified)
# MONGODB_MAX_POOL_SIZE=10
# MONGODB_MIN_POOL_SIZE=5
# MONGODB_MAX_IDLE_TIME_MS=30000
# MONGODB_CONNECT_TIMEOUT_MS=30000
# MONGODB_SERVER_SELECTION_TIMEOUT_MS=30000

# Development settings
# NODE_ENV=development